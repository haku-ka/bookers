<hedaer>
<h1>Books</h1>
</hedaer>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td class="btn"><%= link_to "Show", book, class:"btn" %></td>
        <td class="btn"><%= link_to "Edit", edit_book_path(book), class:"btn" %></td>
        <td class="btn"><%= link_to "Destroy", book, method: :delete, data: { confirm: "Are you sure?" }, class:"btn" %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= flash[:notice] %>

<%= flash[:error] %>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>



<h2>NEW BOOK</h2>
<%= form_with model:@book, local:true do |f| %>

<h4>Title</h4>
  <%= f.text_field :title %>

<h4>Body</h4>
  <%= f.text_field :body %><br>

  <%= f.submit 'Create Book' %>

<% end %>

